<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default16_margin"
    tools:context=".fragment.StudentReports">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragment.StudentReports">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default16_margin"
            android:background="@drawable/header_back"
            android:gravity="center_horizontal"
            android:text="Quizz States"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit_NoDataToShow"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default16_margin"
            app:SpinKit_Color="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvNoDataToShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default16_margin"
            android:layout_marginBottom="@dimen/default16_margin"
            android:gravity="center"
            android:text="No Data To Show"
            android:textSize="30sp"
            android:visibility="gone" />

        <com.anychart.AnyChartView
            android:id="@+id/chartQuizzes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/default16_margin" />

        <LinearLayout
            android:id="@+id/parameterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default16_margin"
                android:layout_marginBottom="@dimen/default16_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default16_margin"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:text="Average Value "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvAverageValueStudent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default16_margin"
                android:layout_marginBottom="@dimen/default16_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default16_margin"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:text="Max Grade "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvmaxValueStudent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default16_margin"
                android:layout_marginBottom="@dimen/default16_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default16_margin"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:text="Min Grade"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvminValueStudent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/header_back"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
